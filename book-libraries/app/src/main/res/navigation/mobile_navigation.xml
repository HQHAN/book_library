<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_new">

    <fragment
        android:id="@+id/navigation_new"
        android:name="com.sendbird.book_library.ui.home.NewBookFragment"
        android:label="@string/title_new"
        tools:layout="@layout/fragment_new" >
        <action
            android:id="@+id/action_navigation_new_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment"
            app:launchSingleTop="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.sendbird.book_library.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_bookmark"
        android:name="com.sendbird.book_library.ui.bookmark.BookmarkFragment"
        android:label="@string/title_bookmark"
        tools:layout="@layout/fragment_bookmark" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.sendbird.book_library.ui.history.HistoryFragment"
        android:label="@string/title_history"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.sendbird.book_library.detail.ui.BookDetailFragment"
        android:label="BookDetailFragment" >
        <argument
            android:name="isbn"
            app:argType="long" />
    </fragment>
</navigation>
